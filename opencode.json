{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/gpt-4.1",
  "mcp": {
    "mcp-context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "agent": {
    "build": {
      "disable": false,
      "model": "github-copilot/gpt-4.1",
    },
    "plan": {
      "model": "github-copilot/gpt-4.1",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "fetch": false
      }
    },
    "general": {
      "tools": {
        "*": true
      }
    }
  }
}
